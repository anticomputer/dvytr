# Example .env file for DevYeeter
# Copy this file to .env and customize for your project
# All variables defined here will be available in the container environment
#
# Password Manager Support:
# Use "passage://path/to/secret" or "pass://path/to/secret" syntax
# Examples:
#   API_KEY=passage://services/api/key  (passage - age encryption)
#   API_KEY=pass://services/api/key     (pass - GPG encryption)
# Secrets are retrieved when running 'dvytr run' before container creation

# Application environment
NODE_ENV=development
DEBUG=true

# API Configuration
API_URL=http://localhost:8080
API_KEY=your-api-key-here
# API_KEY=passage://services/myapp/api-key  # Alternative: retrieve from passage
# API_KEY=pass://services/myapp/api-key     # Alternative: retrieve from pass

# Database Configuration
DATABASE_URL=postgresql://localhost:5432/mydb
# DATABASE_URL=passage://databases/myapp/connection  # Alternative: retrieve from passage
# DATABASE_URL=pass://databases/myapp/connection     # Alternative: retrieve from pass
DB_USER=dev
DB_PASSWORD=dev123
# DB_PASSWORD=passage://databases/myapp/password  # Alternative: retrieve from passage
# DB_PASSWORD=pass://databases/myapp/password     # Alternative: retrieve from pass

# Redis
REDIS_URL=redis://localhost:6379

# Ports
PORT=3000
API_PORT=8080

# Feature Flags
ENABLE_FEATURE_X=true
ENABLE_LOGGING=true

# Custom paths
DATA_DIR=/workspace/data
LOG_DIR=/workspace/logs

# Note: These variables are passed to the container at startup
# Changes to .env require restarting the container: dvytr stop && dvytr run
